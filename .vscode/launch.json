{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (from Project Root)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}" // Add this line
            }
        }
    ]
}